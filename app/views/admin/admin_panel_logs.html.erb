<!-- Creates a view for admin panel logs -->
<% provide(:title, 'Logs') %>
<div class="row">
  <h3>Admin Logs</h3>
    <div class="col-md-2">
      <div class="panel panel-default">
  	  <div class="panel-heading">
  	    Admin Panel Links:
  	  </div>
  	  <div class="panel-body"></div>
        <ul class="sidebar-list">
          <li class="sidebar-item">-<%= link_to "Admin Panel Overview", admin_panel_path, class: "sidebar-link" %></li>
          <li class="sidebar-item">-<%= link_to "User Information", admin_panel_users_path, class: "sidebar-link" %></li>
          <li class="sidebar-item">-<%= link_to "Quizzes", admin_panel_quizzes_path, class: "sidebar-link" %></li>
          <li class="sidebar-item">-<%= link_to "Logs",admin_panel_logs_path, class: "sidebar-link active" %></li>
        </ul>
      </div>
    </div>  
  
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        Logs:
      </div>
      <div class="panel-body">
        <!-- Creates a row for each log and imports every cell thjat contains data and displays it in the row for that log -->
        <% @logs.each do |log| %>
          <div class="row">
          	<div class="col-md-3 pull-left">
          	  <% if log.user? %>
        	  <h4>User: <%= log.user %></h4>  <br>
        	  <% end %>	
        	  <% if log.quiz? %>
        	  <h4>Quiz: <%= log.quiz %></h4><br>
        	  <% end %>  
          	  <h4> Event: <%= log.event %></h4><br>
          	</div>
          	<div class="col-md-3">
              <% if log.updated_by?  %>
          	  <h4>Updated By: <%= log.updated_by %></h4><br>
              <% end %>
          	  <h4>Submitted At: <%= log.updated_at %></h4>
          	</div>
          	<div class="col-md-3 pull-right">
          		<% if log.last_sign_in_ip? %>
          		  <h4>Submission IP: <%= log.last_sign_in_ip %></h4>
          		<% end %>
          	</div>
          </div>
          <hr>
        <% end %>
      </div>
      
    </div>
  </div>
</div>
