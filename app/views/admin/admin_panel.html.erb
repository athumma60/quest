<!-- Creates a view for the admin panel overview and allows navigation to be used throughout it -->
<% provide(:title, 'Admin Panel') %>
<div class="row">
  <h3>Admin Panel Overview</h3>
    <div class="col-md-2">
      <div class="panel panel-default">
  	  <div class="panel-heading">
  	    Admin Panel Links:
        <!-- Creates a sidebar with navigational links -->
  	  </div>
  	  <div class="panel-body"></div>
        <ul class="sidebar-list">
          <li class="sidebar-item">-<%= link_to "Admin Panel Overview", admin_panel_path, class: "sidebar-link active" %></li>
          <li class="sidebar-item">-<%= link_to "User Information", admin_panel_users_path, class: "sidebar-link" %></li>
          <li class="sidebar-item">-<%= link_to "Quizzes", admin_panel_quizzes_path, class: "sidebar-link" %></li>
          <li class="sidebar-item">-<%= link_to "Logs",admin_panel_logs_path, class: "sidebar-link" %></li>
        </ul>
      </div>
    </div>  
  
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        General Information:
        <!-- Creates rows for each table in the database and pulls live information from the database to display -->
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-2">
          	<h4>User Information:</h4>
          </div>
          <div class="col-md-7">
          	<h4>We currently have a total of <%= @users.count %> users!</h4>
          </div>
        </div>

        <hr>

        <div class="row">
          <div class="col-md-2">
          	<h4>Quiz Information:</h4>
          </div>
          <div class="col-md-7">
          	<h4>We currently have a total of <%= @quizzes.count %> Quizzes!</h4>
          </div>
        </div>

        <hr>

        <div class="row">
          <div class="col-md-2">
            <h4>Logs</h4>
          </div>
          <div class="col-md-7">
            <h4>There are currently <%= @logs.count %> event logs in the system</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
