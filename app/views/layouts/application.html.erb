<!-- Creates the basic layout for all pages on the website -->
<!DOCTYPE html>
<html>
<head>
<!-- Pulls a pages full title -->
  <title><%= full_title(yield(:title)) %></title>
  <%= csrf_meta_tags %>
<!-- Pulls stylesheets and javascripts into the application -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application/assets', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<!-- Renders the navbar into all pages on the website -->
  <%= render 'shared/navbar' %>
<div class="container">
	  <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

  <%= yield %>
</div>

</body>
</html>
